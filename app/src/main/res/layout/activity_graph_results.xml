<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abe.bac_dr1.graphResults">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:id="@+id/graph" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current BAC: "
        android:id="@+id/graphBac"
        android:layout_marginLeft="22dp"
        android:textColor="#000000"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/graph"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ethanol Consumed:"
        android:id="@+id/gStom"
        android:layout_marginRight="41dp"
        android:layout_below="@+id/graphBac"
        android:layout_alignStart="@+id/graphBac"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ethanol Consumed:"
        android:id="@+id/gMet"
        android:layout_below="@+id/gStom"
        android:layout_alignStart="@+id/gStom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ethanol Consumed:"
        android:id="@+id/gBlood"
        android:layout_below="@+id/gMet"
        android:layout_alignStart="@+id/gMet" />

    <TextView
        android:text="SoberAt "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gBlood"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="?android:attr/textColorPrimary"
        android:textStyle="normal|bold"
        android:id="@+id/soberAt"
        android:textAllCaps="false" />

</RelativeLayout>


